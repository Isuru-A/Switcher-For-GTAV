<UserControl x:Class="Switcher.SettingsButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Switcher"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" HorizontalAlignment="Center" VerticalAlignment="Center">
    
    <Viewbox>
        <Grid HorizontalAlignment="Center" Height="200" Margin="0" VerticalAlignment="Center" Width="200">
            <Ellipse x:Name="Button" Fill="#FF323232" HorizontalAlignment="Center" Height="175" Margin="0" VerticalAlignment="Center" Width="175" Stroke="#FF646464" StrokeThickness="5"/>
            <Image x:Name="Image" Margin="0" Source="Images/settings.png" Stretch="Fill" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Viewbox>

    
</UserControl>

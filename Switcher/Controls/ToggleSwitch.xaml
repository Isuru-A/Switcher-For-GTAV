<UserControl x:Class="Switcher.ToggleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Switcher"
             mc:Ignorable="d" Height="1039" Width="1473.5" HorizontalAlignment="Center" VerticalAlignment="Center">

    <Viewbox Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid HorizontalAlignment="Center" Height="105" Margin="0" VerticalAlignment="Center" Width="171.667">
            <Rectangle x:Name="switchRail" Fill="#FF646464" HorizontalAlignment="Left" Height="85" Margin="10,10,0,0" VerticalAlignment="Top" Width="151.667" RadiusY="42.5" RadiusX="42.5" MouseLeftButtonDown="switchRail_MouseLeftButtonDown"/>
            <Ellipse x:Name="switchSlider" Fill="White" MouseLeftButtonDown="switchSlider_MouseLeftButtonDown" Margin="0" HorizontalAlignment="Center" Width="72.5" Height="72.5" VerticalAlignment="Center"/>
        </Grid>
    </Viewbox>

</UserControl>

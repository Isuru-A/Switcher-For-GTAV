<UserControl x:Class="Switcher.ControlSet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Switcher"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid HorizontalAlignment="Center" Height="75" Margin="0" VerticalAlignment="Center" Width="200">
            <Rectangle Fill="#FF323232" HorizontalAlignment="Center" Height="55" Margin="0" Stroke="#FF646464" VerticalAlignment="Center" Width="180" RadiusX="26" RadiusY="26"/>
            <Ellipse x:Name="CloseCircle" Fill="#FF960000" HorizontalAlignment="Left" Height="45" Margin="139.5,15,0,0" VerticalAlignment="Top" Width="45" MouseEnter="CloseCircle_MouseEnter" MouseLeave="CloseCircle_MouseLeave"/>
            <TextBlock HorizontalAlignment="Center" Height="32" Margin="45.657,21.5,84.343,21.5" TextWrapping="Wrap" Text="Close" VerticalAlignment="Center" Width="70" FontFamily="Century Gothic" FontWeight="Bold" Foreground="White" FontSize="25"/>
        </Grid>
    </Viewbox>
</UserControl>

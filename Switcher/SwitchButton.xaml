<UserControl x:Class="Switcher.SwitchButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Switcher"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid HorizontalAlignment="Center" Height="200" Margin="0" VerticalAlignment="Center" Width="200">
            <Ellipse x:Name="Button" HorizontalAlignment="Center" Height="180" Margin="0" VerticalAlignment="Center" Width="180" Stroke="#FF646464" StrokeThickness="10" Fill="#FF00C800" MouseLeftButtonDown="Button_MouseLeftButtonDown"/>
        </Grid>
    </Viewbox>
</UserControl>

<UserControl x:Class="Switcher.BrowseButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Switcher"
             mc:Ignorable="d" Height="102" Width="266">
    
    <Viewbox>
            <Grid HorizontalAlignment="Center" Height="50" Margin="0" VerticalAlignment="Center" Width="100">
                <Rectangle x:Name="Button" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="60" RadiusX="15" RadiusY="15" Fill="#FF646464"/>
                <Grid x:Name="Text" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="7.334" VerticalAlignment="Top" Width="7.333"/>
                    <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="7.334" Margin="9.99,0,0,0" VerticalAlignment="Top" Width="7.333"/>
                    <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="7.334" Margin="19.98,0,0,0" VerticalAlignment="Top" Width="7.333"/>
                </Grid>
            </Grid>
        </Viewbox>
</UserControl>
